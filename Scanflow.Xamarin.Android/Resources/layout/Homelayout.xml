<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <ImageView
        android:id="@+id/homelogo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:src="@drawable/toplogo"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
      />
    <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#808080"
      />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/frame"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scanflow is an AI Scanner on smart devices for date capture and workflow automation Kit that capture multiple date from barcode, Qrcode, Text, IDs, Safety codes."
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_background">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Select Scanners"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
            />
           
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    
            />
            
        </LinearLayout>
       

            
       
    </LinearLayout>

</LinearLayout>
